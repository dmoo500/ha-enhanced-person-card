{
  "name": "ha-enhanced-person-card",
  "version": "1.3.1",
  "description": "An advanced person card for Home Assistant with intelligent device tracking, comprehensive sensor integration, and responsive grid layout support",
  "main": "enhanced-person-card.js",
  "scripts": {
    "build": "esbuild src/enhanced-person-card.ts --bundle --minify --target=es2019 --outfile=enhanced-person-card.js",
    "build:watch": "esbuild src/enhanced-person-card.ts --bundle --minify --watch --target=es2019 --outfile=enhanced-person-card.js",
    "dev": "tsc --watch",
    "clean": "rm -rf dist enhanced-person-card.js",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "home-assistant",
    "custom-card",
    "enhanced-person-card",
    "device-tracking",
    "sensor-integration",
    "hacs",
    "lovelace",
    "typescript"
  ],
  "author": "dmoo500",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dmoo500/ha-enhanced-person-card.git"
  },
  "bugs": {
    "url": "https://github.com/dmoo500/ha-enhanced-person-card/issues"
  },
  "homepage": "https://github.com/dmoo500/ha-enhanced-person-card#readme",
  "devDependencies": {
    "esbuild": "^0.25.9",
    "typescript": "^5.0.0"
  },
  "files": [
    "enhanced-person-card.js",
    "README.md",
    "LICENSE",
    "hacs.json",
    "info.md",
    "CHANGELOG.md"
  ]
}
