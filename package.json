{
  "name": "ha-enhanced-person-card",
  "version": "1.3.3",
  "description": "An advanced person card for Home Assistant with intelligent device tracking, comprehensive sensor integration, and responsive grid layout support",
  "main": "enhanced-person-card.js",
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "serve": "python3 -m http.server 8000",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/ --ext .ts,.js",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "yarn build",
    "validate": "yarn type-check && yarn lint && yarn format:check",
    "validate:hacs": "./scripts/validate-hacs.sh",
    "release": "yarn validate && yarn build"
  },
  "keywords": [
    "home-assistant",
    "custom-card",
    "enhanced-person-card",
    "device-tracking",
    "sensor-integration",
    "hacs",
    "lovelace",
    "typescript"
  ],
  "author": "dmoo500",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dmoo500/ha-enhanced-person-card.git"
  },
  "bugs": {
    "url": "https://github.com/dmoo500/ha-enhanced-person-card/issues"
  },
  "homepage": "https://github.com/dmoo500/ha-enhanced-person-card#readme",
  "files": [
    "enhanced-person-card.js",
    "README.md",
    "LICENSE",
    "hacs.json",
    "CHANGELOG.md"
  ],
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-promise": "^7.2.1",
    "prettier": "^3.3.0",
    "tslib": "^2.6.3",
    "typescript": "^5.4.5",
    "vite": "^7.1.2"
  },
  "dependencies": {
    "@mdi/js": "^7.4.47",
    "custom-card-helpers": "^1.9.0",
    "lit": "^3.1.4",
    "lit-translate": "^2.0.1"
  }
}
